class Shape:
    def __init__(self, name):
        self.name = name

    def area(self):
        return 0

    def __str__(self):
        return f"{self.name} shape"

class Triangle(Shape):
    def __init__(self, base, height):
        # Call parent constructor with the name
        super().__init__("Triangle")
        self.base = base
        self.height = height

    def area(self):
        return (self.base * self.height) / 2

    def __str__(self):
        return f"{self.name} with base {self.base} and height {self.height} has area {self.area()}"

# Example usage
tri = Triangle(10, 5)
print(tri)
