# ----- BankAccount class -----
class BankAccount:
    def __init__(self, owner, balance=0):
        self.owner = owner
        self.balance = balance

    def deposit(self, amount):
        self.balance += amount

    def withdraw(self, amount):
        if amount <= self.balance:
            self.balance -= amount
        else:
            print("Insufficient funds")

    def __str__(self):
        return f"{self.owner} â€” balance: ${self.balance}"


# ----- Bank class -----
class Bank:
    def __init__(self):
        self.accounts = []   # list of BankAccount objects

    def add_account(self, account):
        self.accounts.append(account)

    def find_account(self, owner_name):
        for account in self.accounts:
            if account.owner == owner_name:
                return account
        return None

    def __str__(self):
        if not self.accounts:
            return "Bank has no accounts."
        return "\n".join(str(account) for account in self.accounts)


# ----- Example usage -----
bank = Bank()

acc1 = BankAccount("Paige", 500)
acc2 = BankAccount("Alex", 200)

bank.add_account(acc1)
bank.add_account(acc2)

print("All accounts:")
print(bank)

print("\nSearching for Paige:")
found = bank.find_account("Paige")
if found:
    print("Found:", found)

print("\nDepositing $100 to Paige...")
found.deposit(100)
print(found)

print("\nWithdrawing $50 from Alex...")
acc2.withdraw(50)
print(acc2)
